---
import '~/assets/styles/tailwind.css';

import About from '../components/sections/About.astro';
import Contact from '../components/sections/Contact.astro';
import Footer from '../components/sections/Footer.astro';
import Header from '../components/sections/Header.astro';
import Hero from '../components/sections/Hero.astro';
import Portfolio from '../components/sections/Portfolio.astro';
import Summary from '../components/sections/Summary.astro';
import Team from '../components/sections/Team.astro';
import Wrapper from '../components/utils/Wrapper.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

import { headerData, footerData } from '~/navigation';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Luxury Architect</title>
  </head>
  <body>
    <BaseLayout>
      <Wrapper>
        <Header />
        <Hero />
        <Summary />
        <Portfolio />
        <About />
        <Team />
        <Contact />
        <Footer {...footerData} />
      </Wrapper>
    </BaseLayout>
  </body>
</html>
