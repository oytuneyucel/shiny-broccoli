---
interface Props {
  src: string;
  alt: string;
  name: string;
  role: string;
  href?: string;
  imageMode?: 'contain' | 'cover';
}
const { src, alt, name, role, href = '#', imageMode = 'cover' } = Astro.props;
---

<a class="block relative w-full h-full cursor-pointer group overflow-hidden" href={href}>
  <img
    class={imageMode === 'cover'
      ? 'w-full h-full object-cover grayscale group-hover:scale-125 duration-500'
      : 'w-full h-full object-contain grayscale group-hover:scale-125 duration-500'}
    src={src}
    alt={alt}
  />
  <div
    class="bg-slate-500 bg-opacity-20 absolute bottom-0 w-full p-2 gap-1 backdrop-blur-md translate-y-full group-hover:translate-y-0 transition-transform md:gap-2"
  >
    <h3 class="text-lg font-medium md:text-xl lg:text-3xl">
      {name}
    </h3>
    <span class="text-sm lg:text-base">{role}</span>
  </div>
</a>
